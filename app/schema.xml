<?xml version="1.0" encoding="UTF-8"?>
<database name="colony" defaultIdMethod="native">
    <table name="session">
        <column name="id" type="varchar" size="40" required="true" primaryKey="true" />
        <column name="data" type="longvarchar" />
        <behavior name="timestampable" />
    </table>
    
    <table name="user">
        <column name="id" type="integer" primaryKey="true" autoIncrement="true" />
        <column name="email" type="varchar" size="100" required="true" />
        <column name="password" type="varchar" size="40" required="true" />
    </table>
</database>

